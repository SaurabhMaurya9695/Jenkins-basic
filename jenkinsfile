pipeline {
    agent any

    tools {
        maven "jenkins_maven"
    }

    stages {
        stage('clone') {
            steps {
                git branch: 'main', url: 'https://github.com/SaurabhMaurya9695/Jenkins-basic'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('build image') {
            steps {
                sh 'docker build -t saurabh9695/hubpipeline .'
            }
            post { 
                // If Maven was able to run the tests, even if some tests failed, 
                // record the test results and archive the jar file.
                success {
                    junit '**/target/surefire-reports/TEST-*.xml' 
                    archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
                } 
            }
        }
    }
}
